<Window x:Class="RestuaruntApp.Grilled_Chicken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestuaruntApp"
        mc:Ignorable="d"
        Title="Grilled_Chicken" Height="547" Width="900.8" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Image HorizontalAlignment="Left" Height="468" Margin="19,31,0,0" VerticalAlignment="Top" Width="875" Source="GrilledChicken.png" RenderTransformOrigin="0,0" Opacity="0.615">
            <Image.Effect>
                <BlurEffect/>
            </Image.Effect>
        </Image>
        <Label Content="Flame Grilled Chicken" HorizontalAlignment="Left" Margin="176,0,0,0" VerticalAlignment="Top" Width="612" Height="66" FontSize="45" FontFamily="Sitka Small"/>
        <Label Content="Our New Grilled Chicken Sandwich is made with seasoned 100% white meat chicken filet, &#xD;&#xA;flame-grilled to perfection, marinated with spices, layered with fresh lettuce, ripe tomato, &#xD;&#xA;and sweet honey mustard on a toasted potato bun." HorizontalAlignment="Left" Height="119" Margin="10,53,0,0" VerticalAlignment="Top" Width="884" FontSize="22" FontFamily="Yu Gothic UI Semibold"/>
        <Label Content="Select Size" HorizontalAlignment="Left" Margin="19,194,0,0" VerticalAlignment="Top" Height="57" Width="198" FontSize="34" FontFamily="Yu Gothic UI Semibold" Background="White" Opacity="0.8"/>
        <Button x:Name="back" Content="&lt;Back" HorizontalAlignment="Left" Margin="10,434,0,0" VerticalAlignment="Top" Width="114" Height="74" FontSize="30" FontFamily="Segoe UI Black" Background="White" BorderBrush="Black" Click="back_Click"/>
        <Label Content="Add Extra cheese slices" HorizontalAlignment="Left" Margin="19,262,0,0" VerticalAlignment="Top" Height="55" Width="369" FontSize="34" FontFamily="Yu Gothic UI Semibold" Background="White" Opacity="0.8"/>
        <Label Content="RS." HorizontalAlignment="Left" VerticalAlignment="Top" Margin="176,456,0,0" Height="60" Width="57" FontSize="35"/>
        <TextBlock x:Name="pricebox" HorizontalAlignment="Left" Margin="233,428,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="143" Height="60" FontSize="32" FontFamily="Segoe UI Black"/>
        <ComboBox HorizontalAlignment="Left" Margin="423,262,0,0" VerticalAlignment="Top" Width="91" Height="55" FontSize="30" FontFamily="Segoe UI Black" SelectionChanged="ComboBox_SelectionChanged" x:Name="cheesecombobox">
            <ComboBoxItem Content="0" HorizontalAlignment="Left" Width="202"/>
            <ComboBoxItem Content="1" HorizontalAlignment="Left" Width="201.6"/>
            <ComboBoxItem Content="2" HorizontalAlignment="Left" Width="201.6"/>
            <ComboBoxItem Content="3" HorizontalAlignment="Left" Width="201.6"/>
        </ComboBox>
        <TextBox x:Name="quantitybcw" HorizontalAlignment="Left" Height="54" Margin="298,368,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="102" Background="White" BorderBrush="#FF3DFF00" FontSize="25" TextChanged="quantity_TextChanged" Text="&#xA;"/>
        <Button x:Name="minze" Content="-" HorizontalAlignment="Left" VerticalAlignment="Top" Width="87" Margin="176,368,0,0" Height="54" FontSize="30" FontFamily="Segoe UI Black" Background="#FF6C6C6C" Foreground="#FF71FF3B" Click="minze_Click"/>
        <Button x:Name="pluse" Content="+" HorizontalAlignment="Left" VerticalAlignment="Top" Width="87" Margin="428,368,0,0" Height="54" FontSize="30" FontFamily="Segoe UI Black" Background="#FF747474" Foreground="#FF0AFF30" Click="pluse_Click"/>
        <Button x:Name="addCartbtn" Content="  Add &#xA;To Cart" HorizontalAlignment="Left" Margin="429,436,0,0" VerticalAlignment="Top" Width="86" Height="72" Background="#FF3DFF00" FontSize="25" FontFamily="Sitka Banner" Click="addCartbtn_Click"/>
        <RadioButton x:Name="large" Content="Large" HorizontalAlignment="Left" Margin="535,194,0,0" VerticalAlignment="Top" Height="57" Width="120" FontSize="29" FontFamily="Segoe UI Black" BorderBrush="Black" Background="White" Checked="large_Checked"/>
        <RadioButton x:Name="medium" Content="Medium" HorizontalAlignment="Left" Margin="389,194,0,0" VerticalAlignment="Top" Height="57" Width="141" FontSize="28" FontFamily="Segoe UI Black" Background="White" BorderBrush="Black" Checked="medium_Checked"/>
        <RadioButton x:Name="small" Content="Small" HorizontalAlignment="Left" Margin="268,194,0,0" VerticalAlignment="Top" Height="57" Width="120" FontSize="30" FontFamily="Segoe UI Black" Background="White" BorderBrush="Black" Foreground="Black" Checked="small_Checked"/>
        <Image x:Name="bugersizeimge" HorizontalAlignment="Left" Height="184" VerticalAlignment="Top" Width="358" Margin="526,274,0,0" Source="GrilledChicken.png"/>
        <TextBlock x:Name="sizeblock" HorizontalAlignment="Left" Margin="551,463,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="36" Width="311" FontSize="25" FontFamily="Segoe UI Black"/>

    </Grid>
</Window>
